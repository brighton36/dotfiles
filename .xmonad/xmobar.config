Config {
  -- appearance
  font             =  "xft:Cousine NF:size=12:antialias=true"
  , bgColor          =  "#073642" -- Solarized base02
  , fgColor          =  "#93a1a1" -- Solarized base1
  , alpha            =  255
  , position         =  Top --Static { xpos = 0 , ypos = 0, width = 1920, height = 24}
  , border           =  BottomB
  , borderColor      =  "#002b36" -- Solarized base03
  , lowerOnStart     =  True
  , hideOnStart      =  False
  , allDesktops      =  True
  , overrideRedirect =  False
  , pickBroadest     =  False
  , persistent       =  False
  , sepChar          =  "%"
  , alignSep         =  "}{"
  , template         =  " %UnsafeStdinReader% }{ %cpu% | %memory% / %swap% | %battery% | %bright% | %pulse:Master%  <fc=#2aa198>%date%</fc> " -- #6c71c4 is purple

  -- plugins
  commands = [
      Run UnsafeStdinReader
      -- #859900 is green, #dc322f is red:
    , Run Cpu ["-L","3","-H","50","--normal","#859900","--high","#dc322f"] 10
    , Run BatteryP ["BAT0"]
      [ "-t", "<acstatus> Left: <left>%"
        , "-L", "21", "-l", "#dc322f"
        , "-H", "80", "-h", "#859900"
        , "--"
        , "-i", "\xf1e6"
        , "-O", "<fc=#859900>\xf1e6</fc> - ", "-o", "AC:off"] 100
    , Run Memory 
      [ "--template" ,"Mem: <usedratio>%"
      , "--Low"      , "20"        -- units: %
      , "--High"     , "90"        -- units: %
      , "--low"      , "#859900" -- Solarized Green
      , "--normal"   , "#cb4b16" -- Solarized Orange
      , "--high"     , "#dc322f" -- Solarized Red
      ] 10
    , Run Swap [] 10
    , Run Brightness [ "-t", "Screen: <percent>%"] 30
    , Run Volume "pulse"  "Master" ["-t", "Vol: <volume>%"] 1
    , Run Date "%a %b %_d %H:%M" "date" 10
    ]
  }
