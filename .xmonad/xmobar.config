Config {
  -- appearance
  font             =  "xft:Cousine NF:size=11:SemiBold:antialias=true"
  , bgColor          =  "#fdf6e3" -- Solarized base3
  , fgColor          =  "#586e75" -- Solarized base01
  , alpha            =  255
  , position         =  Top --Static { xpos = 0 , ypos = 0, width = 1920, height = 24}
  , border           =  BottomB
  , borderColor      =  "#002b36" -- Solarized base3
  , lowerOnStart     =  True
  , hideOnStart      =  False
  , allDesktops      =  True
  , overrideRedirect =  False
  , pickBroadest     =  False
  , persistent       =  False
  , sepChar          =  "%"
  , alignSep         =  "}{"
  , template         =  " %UnsafeStdinReader% }{ %cpu% | %memory% * %swap%   %date% "

  -- plugins
  commands = [
      Run UnsafeStdinReader
    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
    -- TODO: No workie:
    , Run Memory ["-t","Mem: %"] 10
    , Run Swap [] 10
    , Run Date "%a %b %_d %H:%M" "date" 10
    ]
  }
